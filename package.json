{
  "name": "gt-node-server",
  "version": "0.8.4",
  "description": "node server gt scaffold",
  "main": "index.js",
  "scripts": {
    "release": "standard-version && git push --follow-tags",
    "build:client": "rm -rf build_client && webpack",
    "build:server": "rm -rf build_server && babel app -d build_server --config-file ./babel.config.server.js --source-maps",
    "build": "yarn build:client && yarn build:server",
    "start": "NODE_ENV=production node index.js",
    "dev": "NODE_ENV=development node index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vivaxy/gt-node-server.git"
  },
  "keywords": [
    "gt",
    "node",
    "server",
    "scaffold"
  ],
  "author": "vivaxy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vivaxy/gt-node-server/issues"
  },
  "homepage": "https://github.com/vivaxy/gt-node-server#readme",
  "dependencies": {
    "@babel/runtime": "^7.7.4",
    "@koa/router": "^9.0.0",
    "ejs-stream2": "^1.0.2",
    "fast-glob": "^3.1.0",
    "fs-extra": "^9.0.0",
    "koa": "^2.5.2",
    "koa-body": "^4.0.4",
    "koa-compose": "^4.1.0",
    "log4js": "^6.0.0",
    "react": "^16.12.0",
    "react-redux": "^7.1.3",
    "redux": "^4.0.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.7.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "babel-plugin-transform-require-ignore": "^0.1.1",
    "css-loader": "^4.0.0",
    "express-to-koa": "^2.0.0",
    "husky": "^4.0.0",
    "lint-staged": "^10.0.0",
    "mini-css-extract-plugin": "^0.12.0",
    "prettier": "^2.0.0",
    "react-dom": "^16.12.0",
    "standard-version": "^9.0.0",
    "style-loader": "^1.0.0",
    "webpack": "^4.41.3",
    "webpack-cli": "^3.3.10",
    "webpack-dev-middleware": "^3.7.2"
  },
  "lint-staged": {
    "**/**.{js,json,pcss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}

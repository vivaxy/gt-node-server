{
  "name": "gt-node-server",
  "version": "0.8.4",
  "description": "node server gt scaffold",
  "main": "index.js",
  "scripts": {
    "release": "standard-version && git push --follow-tags",
    "start": "NODE_ENV=production next build && NODE_ENV=production pm2 start index.js",
    "update": "NODE_ENV=production next build && NODE_ENV=production pm2 update",
    "dev": "NODE_ENV=development nodemon index.js",
    "precommit": "lint-staged",
    "test": "ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vivaxy/gt-node-server.git"
  },
  "keywords": [
    "gt",
    "node",
    "server",
    "scaffold"
  ],
  "author": "vivaxy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vivaxy/gt-node-server/issues"
  },
  "homepage": "https://github.com/vivaxy/gt-node-server#readme",
  "dependencies": {
    "@std/esm": "^0.21.4",
    "fs-extra": "^5.0.0",
    "glob": "^7.1.1",
    "glob-promise": "^3.3.0",
    "isomorphic-fetch": "^2.2.1",
    "koa": "^2.3.0",
    "koa-body": "^2.3.0",
    "log4js": "^2.4.1",
    "path-to-regexp": "^2.1.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-polyfill": "^6.23.0",
    "babel-register": "^6.24.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.1.0",
    "listr": "^0.9.0",
    "nodemon": "^1.11.0",
    "prettier": "^1.10.2",
    "standard-version": "^4.3.0"
  },
  "lint-staged": {
    "**/**.{js,json,pcss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "ava": {
    "require": [
      "@std/esm"
    ]
  },
  "@std/esm": {
    "esm": "js",
    "cjs": true
  }
}
